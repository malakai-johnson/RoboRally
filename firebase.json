{
  "hosting": {
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "redirects": [
        {
            "source": "/index.html",
            "destination": "/login.html",
            "type": 301
        },
        {
            "source": "/",
            "destination": "/login.html",
            "type": 301
        }
    ]
  },
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  }
}
